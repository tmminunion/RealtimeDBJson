    <script>
    // Enhanced token check with immediate redirect
    (function() {
      // List of allowed paths without token

      
      const token = localStorage.getItem("token");
      
      if (!token) {
        // Immediate redirect without showing alert first
        window.location.href = "/";
        return;
      }
      
      // Optional token verification with server
      fetch('/auth/verify-token', {
        headers: { 'Authorization': `Bearer ${token}` }
      })
      .then(response => {
        
        if (!response.ok) {
          
          throw new Error('Invalid token');
        }
      })
      .catch(error => {
        
        alert(error);
        window.location.href = "/";
      });
    })();
  </script>
